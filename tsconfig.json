{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "strict": true,
	"strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "ESNext",
    "types": ["jest", "node"],
  },
  "include": [
    "**/*.ts"
  ]
}
